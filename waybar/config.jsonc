// -*- mode: jsonc -*-
{
  "layer": "bottom",
  "spacing": 4,
  "margin-top": 4,
  "margin-left": 8,
  "margin-right": 8,
  // Choose the order of the modules
  "modules-left": [
    "custom/rofi",
    "sway/workspaces",
    "sway/window",
    "tray"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "disk",
    "cpu",
    "temperature",
    "memory",
    "backlight",
    "pulseaudio",
    "battery",
    "power-profiles-daemon"
  ],
  // Modules configuration
  "custom/rofi": {
    "format": "Óüô",
    "on-click": "rofi -show drun -disable-history -show-icons",
    "on-click-right": "~/.config/waybar/power.sh",
    "escape": true,
    "tooltip": false
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "active-only": false,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
