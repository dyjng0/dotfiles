    //   "3": "3: Ó´Ñ",
    //   "4": "4: Û∞ßÆ",
    //   "5": "5: Ó∞õ",
    //   "6": "6: Ó¨ú",
    //   "7": "7: Û∞ç•"
    // }
  },
  "sway/window": {
    "format": "{app_id}",
    "separate-outputs": true,
    "icon": true
  },
  "keyboard-state": {
